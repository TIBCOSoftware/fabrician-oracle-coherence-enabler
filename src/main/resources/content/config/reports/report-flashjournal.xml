
<report-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xmlns="http://xmlns.oracle.com/coherence/coherence-report-config"
               xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-report-config coherence-report-config.xsd">

    <report>
        <file-name>{date}-flashjournal.txt</file-name>
        <delim>{tab}</delim>
        <filters>
        </filters>
        <query>
            <pattern>Coherence:type=Journal,name=FlashJournalRM,*</pattern>
        </query>
        <row>
            <column id="BatchCounter">
                <type>global</type>
                <name>{batch-counter}</name>
                <header>Batch Counter</header>
            </column>
            <column id="ReportTime">
                <type>global</type>
                <name>{report-time}</name>
                <header>Report Time</header>
            </column>
            <column id="NodeId">
                <type>key</type>
                <name>nodeId</name>
                <header>Node Id</header>
            </column>
            <column id="FileCount">
                <name>FileCount</name>
                <header>FileCount</header>
            </column>
            <column id="BinaryStoreCount">
                <name>BinaryStoreCount</name>
                <header>BinaryStoreCount</header>
            </column>
            <column id="TotalDataSize">
                <name>TotalDataSize</name>
                <header>TotalDataSize</header>
            </column>
            <column id="TotalFileSize">
                <name>TotalFileSize</name>
                <header>TotalFileSize</header>
            </column>
            <column id="BacklogCount">
                <name>BacklogCount</name>
                <header>BacklogCount</header>
            </column>
            <column id="BacklogSize">
                <name>BacklogSize</name>
                <header>BacklogSize</header>
            </column>
            <column id="PoolSize">
                <name>PoolSize</name>
                <header>PoolSize</header>
            </column>
        </row>
    </report>
</report-config>